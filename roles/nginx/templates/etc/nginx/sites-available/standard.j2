server {
	server_name {{ item.server_name }};
	root {{ nginx_root}}/{{ item.server_name }}/public;

	{% if item.use_php %}
	index index.htm index.html index.php;

	location / {
		try_files $uri $uri/ /index.php?q=$uri&$args @php;
	}

	include /etc/nginx/helpers/php;
	{% else %}
	index index.htm index.html index.php;

	location / {
		try_files $uri $uri/;
	}
	{% endif %}

	{% if item.use_pagespeed %}
	pagespeed on;
	{% endif %}

	location ~* \.(txt|js|css|png|jpg|jpeg|gif|ico)$ {
		expires 60d;
		log_not_found off;
	}

	location  ~ /\.ht {
		deny all;
	}

}

{% for redirect_server_name in item.redirect_3O1_from %} 
server {
	server_name  {{ redirect_server_name }};
	return       301 http://{{ item.server_name }}$request_uri;
}

{% endfor %}
